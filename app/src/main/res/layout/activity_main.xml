<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Logo institucional -->
    <ImageView
        android:id="@+id/logoInstituto"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logoapp"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tarjeta central -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/logoInstituto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Estudiantes"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:paddingBottom="24dp" />

            <!-- Botón de registro -->
            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Registrar Alumno"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginBottom="18dp"/>

            <!-- Botón de lista -->
            <Button
                android:id="@+id/btnVerLista"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Ver Lista de Alumnos"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorAccent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
